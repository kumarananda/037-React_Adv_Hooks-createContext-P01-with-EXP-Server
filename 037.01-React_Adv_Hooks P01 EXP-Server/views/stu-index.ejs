
  <body>
    
    <div class="container  my-5">
        <div class="row justify-content-center">

            <div class="col-md-8">
                <a href="/student/create" class="btn btn-primary mb-2">Add New Student</a>
                <div class="card">
                    <div class="card-body">
                        <h2>All Students</h2>
                        <hr>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Cell</th>
                                    <th>Photo</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- ejsseach -->
                                <% student.forEach((element, index) => { %>
                                 
                                
                                    
                                <tr>
                                    <td>01</td>
                                    <td><%= element.name %> </td>
                                    <td><%= element.email %></td>
                                    <td><%= element.cell %></td>
                                    
                                    <td><img style="height:50px; width: 50px; object-fit: cover;" src="/assets/upload/student/<%= element.photo %>" alt=""></td>
                                    <td>
                                        <a href="/student/<%= element._id %>" class="btn btn-sm btn-info"><i class="fas fa-eye"></i></a>
                                        <a href="/student/edit/<%= element._id %>" class="btn btn-sm btn-warning"><i class="fas fa-edit"></i></a>
                                        <a href="/student/delete/<%= element._id %>" class="btn btn-sm btn-danger"><i class="fas fa-trash"></i></a>
                                    </td>
                                </tr>

                                <% }) %>

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div> 

</body>


