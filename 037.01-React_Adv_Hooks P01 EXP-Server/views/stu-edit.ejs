
  <body>
    
    <div class="container  my-5">
        <div class="row justify-content-center">

            <div class="col-md-8">
                <a href="/student" class="btn btn-primary mb-2">Back to all Student</a>
                <div class="card">
                    <div class="card-body">
                        <h2>Edit Student data</h2>
                       <p></p>
                        <hr>
                        <form action="/student/edit/<%= singleStudent.id %>" method="post" enctype="multipart/form-data">
                            
                            <div class="my-3">
                                <label for="">Name </label>
                                <input value="<%=singleStudent.name %>" name="name"  type="text" class="form-control">
                            </div>
                            
                            <!-- <input type="hidden" name="_method" value="PATCH" > -->
                            <div class="my-3">
                                <label for="">Email </label>
                                <input value="<%=singleStudent.email %>" name="email"  type="text" class="form-control">
                            </div>
                            <div class="my-3">
                                <label for="">Cell </label>
                                <input  value="<%=singleStudent.cell %>" name="cell" type="text" class="form-control">
                            </div>
                            <div class="my-3">
                                <label for="">Photo </label> <br>
                                <input  name="old_photo"  class="form-control"  type="text" value="<%= singleStudent.photo %>" >
                                <img style="width:50px" src="/assets/upload/student/<%= singleStudent.photo %>" alt="">
                            </div>
                            <div class="my-3">
                                <label for="">Photo </label> <br>
                                <input  name="photo"  type="file" >
                            </div>

                            <div class="my-3">
                                <input  type="submit" value="Submit" class="btn btn-primary" >
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div> 

  </body>

