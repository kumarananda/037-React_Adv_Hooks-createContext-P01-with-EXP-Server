
  <body>
    
    <div class="container  my-5">
        <div class="row justify-content-center">

            <div class="col-md-8">
                <a href="/product/create" class="btn btn-primary mb-2">Add New Student</a>
                <div class="card">
                    <div class="card-body">
                        <h2>All Students</h2>
                        <hr>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>ID</th>
                                    <th>Title</th>
                                    <th>Desc</th>
                                    <th>Photo</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- ejsseach -->
                                <% product.forEach((element, index) => { %>
                                    <tr>
                                        <td><%= index + 1 %> </td>
                                        <td><%= element.pro_id %></td>
                                        <td><%= element.title %></td>
                                        <td><%= element.descrip %></td>
                                        <td><img style="width: 30px; height: 25px; object-fit: cover;" src="/assets/upload/product/<%= element.photo %>" alt=""></td>
                                        <td></td>
                                    </tr>
                                 
                                <% }) %>
                                

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div> 

</body>


