
  <body>
    
    <div class="container  my-5">
        <div class="row justify-content-center">

            <div class="col-md-8">
                <a href="/product" class="btn btn-primary mb-2">Back to all Product</a>
                <div class="card">
                    <div class="card-body">
                        <h2>Edit Product data</h2>
                       <p></p>
                        <hr>
                        <form action="/product/edit/<%=singleProduct.id %>" method="post" enctype="multipart/form-data">
                            
                            <div class="my-3">
                                <label for="">Name </label>
                                <input value="<%=singleProduct.title %>" name="title"  type="text" class="form-control">
                            </div>
                            <!-- <input type="hidden" name="_method" value="PATCH" > -->
                            <div class="my-3">
                                <label for="">Email </label>
                                <input value="<%=singleProduct.price %>" name="price"  type="text" class="form-control">
                            </div>
                            <div class="my-3">
                                <label for="">Cell </label>
                                <input  value="<%=singleProduct.descrip %>" name="descrip" type="text" class="form-control">
                            </div>
                            <div class="my-3">
                                <label for="">Cell </label>
                                <input  value="<%=singleProduct.category %>" name="category" type="text" class="form-control">
                            </div>
                            <div class="my-3">
                                <label for="">Product ID</label>
                                <input  value="<%=singleProduct.pro_id %>" name="pro_id" type="text" class="form-control">
                            </div>
                            <div class="my-3">
                                <label for="">Photo </label> <br>
                                <input  name="old_photo"  class="form-control"  type="text" value="<%= singleProduct.photo %>" >
                                <img style="width:50px" src="/assets/upload/product/<%= singleProduct.photo %>" alt="">
                            </div>
                            <div class="my-3">
                                <label for="">Photo </label> <br>
                                <input  name="photo"  type="file" >
                            </div>

                            <div class="my-3">

                                <input  type="submit" value="Submit" class="btn btn-primary" >
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div> 

  </body>

